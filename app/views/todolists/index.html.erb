<center><h1 style="color: rosybrown;">Todays' Task</h1></center>


<br>
<%= search_form_for @q,url:todolists_path do |form|%>
	<div class = "form-group">
		<%= form.label :search_by_name %>
		<%= form.text_field :name_cont%>
	</div>
	<div class = "form-group">
		<%= form.submit 'search user '%>
	</div>

<%end%>
<td><%= link_to "New Task", new_todolist_path %></td> 
	<table>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<th>Task</th>
			<th>Task-Time</th>
			<th>Task-Date</th>
		</tr>
		<tbody>

				<% @tasks.each do |todo| %>

				<tr>
				<td><%= todo.name %></td>
				<td><%= todo.email %></td>
				<td><%= todo.task %></td>
				<td><%= todo.task_date %></td>
				<td><%= todo.task_time %></td>
				<td><%= link_to 'Show', todolist_path(todo) %></td>
				<td><%= link_to 'Edit', edit_todolist_path(todo) %></td>
				<td><%= link_to 'Delete', todolist_path(todo),method: :delete,data: { confirm:'Are you sure' } %></td>
				</tr>

				<% end %>
		
		</tbody>
	</table>
